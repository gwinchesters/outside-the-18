        "uikit": "^3.0.0-beta.40",
        "whatwg-fetch": "2.0.3"
    },
    "devDependencies": {
        "autoprefixer": "7.1.6",
        "babel-core": "6.26.0",
        "babel-eslint": "7.2.3",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.2",
        "babel-preset-react-app": "^3.1.1",
        "babel-runtime": "6.26.0",
        "cross-env": "^5.1.4",
        "css-loader": "0.28.7",
        "eslint": "^4.19.1",
        "file-loader": "1.1.5",
        "html-webpack-plugin": "2.29.0",
        "husky": "^0.14.3",
        "mocha": "^5.0.5",
        "name-all-modules-plugin": "^1.0.1",
        "postcss-loader": "2.0.8",
