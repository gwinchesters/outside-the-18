{
    "name": "outside-the-18",
    "version": "1.0.0",
    "description": "Web content for OutsideThe18",
    "author": "gsmith",
    "main": "index.js",
    "private": true,
    "license": "MIT",
    "scripts": {
        "start": "cross-env NODE_ENV=DEV node server.js",
        "build": "cross-env NODE_ENV=PROD webpack --progress --profile --display-error-details",
        "test": "cross-env NODE_ENV=TEST NODE_PATH=. mocha --recursive --colors --reporter dot --compilers js:./test/compiler.js  --require ./test/test-babel-config.js --require ./test/setup.js",
        "lint": "eslint ./src/**/*.js --color",
        "precommit": "echo 'Pre-commit checks...' && yarn run lint",
        "postmerge": "yarn check",
        "postcheckout": "yarn check"
    },
    "dependencies": {
        "babel-polyfill": "^6.9.0",
        "es6-promise": "^4.1.1",
